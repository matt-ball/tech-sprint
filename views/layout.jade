doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/js/jquery.fullPage.css')
    link(rel='stylesheet', href='http://fonts.googleapis.com/icon?family=Material+Icons')
    link(rel='stylesheet', href='/stylesheets/materialize.min.css')
    script(type='text/javascript', src='http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(type='text/javascript', src='/js/jquery.easings.min.js')
    script(type='text/javascript', src='/js/jquery.slimscroll.min.js')
    script(type='text/javascript', src='/js/jquery.fullPage.js')
    script(type='text/javascript', src='/js/script.js')
    script $(document).ready(function() {$('#fullpage').fullpage({paddingTop: 0, responsiveHeight: 1})});
