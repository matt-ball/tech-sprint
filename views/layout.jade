  body
    div.sticky
      nav.white.text-red
        ul.right.hide-on-med-and-down
          li
            a(href="#") Profile
          li
            a(href="#") Deliveries List
          li
            a(href="#") History
          li
          a(href="#") Log out

        ul#slide-out.side-nav.right
          li
            a(href="#") Profile
          li
            a(href="#") Deliveries List
          li
            a(href="#") History
          li
            a(href="#") Log out
        img(src="/")
        a.button-collapse.right(data-activates="slide-out")
          i.mdi-navigation-menu.orange.center
          script(type='text/javascript', src='/js/materialize.min.js')
          script  $('.button-collapse').sideNav({menuWidth: 200, edge: 'right', closeOnClick: true})
      div.page
        h1 #{page}
      block sticky  
    div(class='main #{className}')
      block content
    
